<section id="cal-container">
    <section id="cal-head">
        <span id="btn-today">today</span>
        <span id="btn-last">&lt</span>
        <span id="btn-next">&gt</span>
        <h1 id="cal-title"></h1>
    </section>
    <section id="cal">
    </section>
    <section id="day" hidden>
        <div id="day-panel-head">
            <h3 id="day-panel-date"></h3>
            <span id="day-panel-close">x</span>
        </div>
        <ol class="events">

        </ol>
    </section>
</section>
<section id="event-panel">
    <div id="event-panel-head">
        <h2 id="event-panel-date"></h2>
    </div>
    <ol class="events">

    </ol>
</section>
<script>
    let event_list = [
        {{#each event_list}}
        {_id: '{{this._id}}', title: '{{this.title}}', deadline: new Date('{{this.deadline}}'), priority: {{this.priority}} },
        {{/each}} ]
</script>
<script src="public/js/cal_setup.js" defer></script>
