<h1>This is the Events Page</h1>

<input list="browsers" name="browser">
    <datalist id="browsers">
        <option value="User">
        <option value="Title/Description">
        <option value="Date">
        <option value="Priority">
    </datalist>

<form action="/events/searchPage" method="POST">
    <label for="searchEvents">
        <input type="text" id="searchEvents" name ="searchTerm"/>
    </label>
    <button type="submit">Submit</button>
</form>

<p>Test text</p>

<a href='/events/create'>Create an Event</a>

<form action='/events/create' method='POST'>
    <input name='_method' value='GET' hidden />

    <input name='has_date' value='true' hidden />
    <input name='has_calendar' value='' hidden />

    <br />

    <button type='submit'>
        Create Event with Current Date
    </button>
</form>

<h1>All of Your Events (Full View)</h1>
<div class='event-list-container-full'>
    {{#each events}}
        {{> eventWidget eventView=this}}
    {{/each}}
</div>

<h1>All of Your Events (Compact View)</h1>
<div class='event-list-container-compact'>
    {{#each events}}
        {{> eventWidgetCompact eventView=this}}
    {{/each}}
</div>